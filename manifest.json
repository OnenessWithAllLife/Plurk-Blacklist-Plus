{
  "manifest_version": 3,
  "name": "Plurk Blacklist Plus",
  "version": "1.0.0",
  "description": "強化噗浪黑名單 Chrome Extension，隱藏有提到指定帳號(黑單帳號)的留言 ",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.plurk.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.plurk.com/*"],
      "js": ["common/config.js", "content.js"],
      "css": ["prehide.css", "styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}

